<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/itemFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.weather.MainActivity"
        android:label="MainActivity" />
    <fragment
        android:id="@+id/itemFragment"
        android:name="com.example.weather.ItemFragment"
        android:label="fragment_item_list"
        tools:layout="@layout/fragment_item_list">
        <action
            android:id="@+id/action_itemFragment_to_viewPagerFragment2"
            app:destination="@id/viewPagerFragment"
            app:popUpTo="@id/itemFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.example.weather.ViewPagerFragment"
        android:label="ViewPagerFragment">
        <argument
            android:name="city"
            app:argType="string" />
    </fragment>
</navigation>